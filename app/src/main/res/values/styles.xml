<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="HeadingSemiBold">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeadingBold">
        <item name="fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeadingRegular">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubHeadingRegular">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="DividerView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1px</item>
        <item name="android:alpha">0.2</item>
        <item name="android:background">@color/gray</item>
    </style>


    <!--    Search View -->
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
